generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Attendee {
  id      Int     @id @default(autoincrement())
  name    String
  email   String
  entries Entry[]
}

model Entry {
  id         Int       @id @default(autoincrement())
  attendee   Attendee? @relation(fields: [attendeeId], references: [id])
  attendeeId Int
  day        String
  time       String    @default("00:00")
}
